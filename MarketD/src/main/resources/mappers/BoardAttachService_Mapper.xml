<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.marketd.domain.BoardAttachVo">


	<insert id="insert"> <!-- -->
	
		insert into tbl_attach(uuid, uploadpath, filename, filetype, bidx)
		values(#{uuid}, #{uploadpath}, #{filename}, #{filetype}, #{bidx})
	
	</insert>

	
	<delete id="delete">
	
		delete from tbl_attach where uuid=#{uuid}	
	
	</delete>
	
	<select id="findByBno"  resultType="bav"><!--   -->
	
		select * from tbl_attach where bidx=#{bidx}  
			
	</select>
	
</mapper>